@model  List<Dermasoft.web.Models.MotivoConsultaModel>
<div class="space-v-md"></div>
<div class="center">

    @Html.ActionLink(" ", "MotivoConsultaCreate", "MotivoConsulta",
        new { id = 0, idPaciente = Model.FirstOrDefault().IdPaciente },
        new { @class = "btn btn-floating btn-large waves-effect waves-light green mdi-content-add" })
</div>
<div class="clearfix"></div>


@foreach (var item in Model)
{
    <div class="col l6 m12 s12">
        <div class="card">
            <div class="card-content">
                <div class="visita-info pink-text left">Nº visitas @item.NumeroVisitas</div>
                <div class="pink-text right">@item.UltimaVisita.ToShortDateString()</div>
                <div class="clearfix"></div>
                <div class="space-v-md"></div>
                <div>
                    <h5 class="center-align">
                        @item.MotivoConsultaTitulo.ToUpper()
                    </h5>
                </div>
            </div>
            <div class="card-action">
                
                @Html.ActionLink("Editar", "MotivoConsultaCreate", "MotivoConsulta",
                    new { id = item.IdMotivoConsulta, idPaciente = item.IdPaciente },
                    new { @class = "pink-text right" })

                @Html.ActionLink("Historial", "MotivoConsultaInfo", "MotivoConsulta",
                    new { id = item.IdMotivoConsulta, idPaciente = item.IdPaciente },
                    new { @class = "pink-text right" })

                <div class="clearfix"></div>
            </div>
        </div>
    </div>
}


