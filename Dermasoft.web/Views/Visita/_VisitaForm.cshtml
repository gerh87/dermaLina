@model Dermasoft.web.Models.RelVisitaConsulta
<script src=@Url.Content("~/Scripts/Global.js")></script>
<div class="row">
    <div class="col l6 offset-l3 m12 s12">
        @using (Html.BeginForm("ConsultaSave", "Visita", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Vista.Paciente.IdPaciente)
            @Html.HiddenFor(model => model.Vista.IdVisita)
            @Html.HiddenFor(model => model.MotivoConsultaModel.IdMotivoConsulta)
            @Html.HiddenFor(model => model.IdVisitaMotivo)
            @Html.ValidationSummary(true)

            @Html.LabelFor(model => model.MotivoConsultaModel.MotivoConsulta)
            @Html.TextBoxFor(model => model.MotivoConsultaModel.MotivoConsulta)

            @Html.LabelFor(model => model.MotivoConsultaModel.AntecedentesEA)
            @Html.TextBoxFor(model => model.MotivoConsultaModel.AntecedentesEA)
            @Html.LabelFor(model => model.MotivoConsultaModel.Activo)
            @Html.DropDownListFor(model => model.MotivoConsultaModel.Activo, new SelectList(Model.listaActivoSiNo, "Value", "Text", Model.MotivoConsultaModel.Activo))

            <input type="file" name="file" />

            <div class="space-v-lg"></div>

            <button type="submit" class="col l5 m12 s12 btn waves-effect waves-light orange darken-1 left"><i class="mdi-content-create left"></i>Guardar Cambios</button>
            <a href="@Url.Action("Index", "Paciente")" class="col l5 m12 s12 btn waves-effect waves-light grey darken-1 right"><i class="mdi-content-clear right"></i>Cancelar</a>

        }
    </div>
</div>
