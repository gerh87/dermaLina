@model Dermasoft.web.Models.RelVisitaConsulta.RelVisitaConsultaModel
<div class="partial-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.Visitas.IdPaciente)
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"> <i class="fa fa-forumbee"></i>Motivo de Consulta</span>
                    @Html.DisplayFor(model => model.MotivoConsultas.MotivoConsulta, new
                    {
                        @class = "form-control-custom"

                    })
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"> <i class="fa fa-forumbee"></i>Antecedentes EA </span>
                    @Html.DisplayFor(model => model.MotivoConsultas.AntecedentesEA, new
                    {
                        @class = "form-control-custom"

                    })
                </div>
            </div>
            <div class="well">
                <div>
                    <label>Imagen</label>
                    <input type="file" name="file" />
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group">
                <div align="right">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
